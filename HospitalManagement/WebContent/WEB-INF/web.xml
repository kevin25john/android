<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>HospitalManagement</display-name>
  <welcome-file-list>
    <welcome-file>jsp/index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>driverName</param-name>
    <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
  </context-param>
  <context-param>
    <param-name>url</param-name>
    <param-value>jdbc:sqlserver://localhost:1433;databaseName=MFI15;user=sa;password=sqlserver#123</param-value>
  </context-param>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.hms.login.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>com.hms.login.Registration</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>patientRegistration</servlet-name>
    <servlet-class>com.hms.login.PatientRegistration</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>patientRegistration</servlet-name>
    <url-pattern>/patientRegistration</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.hms.login.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getSpecialistDoctorList</servlet-name>
    <servlet-class>com.hms.action.GetSpecialistDoctorList</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getSpecialistDoctorList</servlet-name>
    <url-pattern>/getSpecialistDoctorList</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>saveAppointment</servlet-name>
    <servlet-class>com.hms.action.SetAppointment</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>saveAppointment</servlet-name>
    <url-pattern>/saveAppointment</url-pattern>
  </servlet-mapping>
  
</web-app>